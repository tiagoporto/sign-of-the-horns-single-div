{
  "name": "sign-of-the-horns",
  "private": true,
  "type": "module",
  "engines": {
    "node": ">=22",
    "npm": "uses pnpm",
    "pnpm": ">=9"
  },
  "packageManager": "pnpm@9.15.2",
  "scripts": {
    "preinstall": "npx only-allow pnpm",
    "postinstall": "$CI = true || editor-config",
    "prepare": "husky",
    "start": "vite",
    "build": "vite build",
    "preview": "vite preview",
    "checks": "pnpm check-docs && pnpm format:check && pnpm lint && pnpm lint:styles",
    "check-docs": "remark --frail .",
    "format:check": "prettier --check --ignore-unknown \"**/*\"",
    "format": "pnpm format:check --write",
    "lint": "eslint --max-warnings 0",
    "lint:fix": "npm run lint -- --write",
    "lint:styles": "stylelint \"**/*.{css,scss}\"",
    "lint:styles:fix": "stylelint \"**/*.{css,scss}\" --fix"
  },
  "devDependencies": {
    "@tiagoporto/editor-config": "^2.0.0",
    "@tiagoporto/eslint-config": "^4.10.0",
    "@tiagoporto/prettier-config": "^2.1.0",
    "@tiagoporto/remark-config": "^1.9.0",
    "@tiagoporto/stylelint-config": "^1.2.0",
    "eslint": "^9.35.0",
    "globals": "^16.4.0",
    "husky": "^9.0.11",
    "lint-staged": "^16.1.6",
    "postcss-combine-media-query": "^2.0.0",
    "postcss-preset-env": "^10.3.1",
    "prettier": "^3.6.2",
    "remark": "^15.0.1",
    "remark-cli": "^12.0.1",
    "sanitize.css": "^13.0.0",
    "sass-embedded": "^1.92.1",
    "sharp": "^0.34.4",
    "stylelint": "^16.24.0",
    "svgo": "^4.0.0",
    "vite": "^7.1.5",
    "vite-plugin-html": "^3.2.2",
    "vite-plugin-image-optimizer": "^2.0.2",
    "vite-plugin-minify": "^2.1.0"
  }
}
