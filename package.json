{
  "name": "sign-of-the-horns",
  "private": true,
  "type": "module",
  "engines": {
    "node": ">=22",
    "npm": ">=10"
  },
  "scripts": {
    "prepare": "husky",
    "start": "vite",
    "build": "vite build",
    "preview": "vite preview",
    "checks": "npm run check-docs && npm run formatting:check && npm run lint && npm run lint:styles",
    "check-docs": "remark --frail .",
    "formatting:check": "prettier --check --ignore-unknown \"**/*\"",
    "formatting": "npm run formatting:check -- --write",
    "lint": "eslint . --max-warnings 0",
    "lint:styles": "stylelint \"**/*.{css,scss}\"",
    "lint:styles:fix": "stylelint \"**/*.{css,scss}\" --fix"
  },
  "devDependencies": {
    "@tiagoporto/dependabot-config": "^1.1.0",
    "@tiagoporto/editor-config": "^1.2.0",
    "@tiagoporto/prettier-config": "^1.2.0",
    "@tiagoporto/remark-config": "^1.5.0",
    "@tiagoporto/stylelint-config": "^1.1.0",
    "eslint": "^8.57.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-config-standard": "^17.1.0",
    "eslint-plugin-eslint-comments": "^3.2.0",
    "eslint-plugin-import": "^2.29.1",
    "eslint-plugin-json": "^3.1.0",
    "eslint-plugin-markdown": "^3.0.1",
    "eslint-plugin-n": "^16.6.2",
    "eslint-plugin-promise": "^6.1.1",
    "eslint-plugin-unicorn": "^51.0.1",
    "husky": "^9.0.11",
    "lint-staged": "^15.2.2",
    "postcss-combine-media-query": "^1.0.1",
    "postcss-preset-env": "^9.4.0",
    "remark": "^15.0.1",
    "remark-cli": "^12.0.0",
    "sanitize.css": "^13.0.0",
    "sass": "^1.71.1",
    "sharp": "^0.33.2",
    "stylelint": "^16.2.1",
    "svgo": "^3.2.0",
    "vite": "^5.1.4",
    "vite-plugin-html": "^3.2.2",
    "vite-plugin-image-optimizer": "^1.1.8",
    "vite-plugin-minify": "^1.5.2"
  }
}
