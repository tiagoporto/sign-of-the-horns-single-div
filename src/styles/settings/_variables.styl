// Color
$primary-color = #000
$secondary-color = #000
$tertiary-color = #000

$bg-color = #470303
$selection-color = #fff
$selection-bg-color = $primary-color

// Paths
$font-path = "../fonts/"

$image-path = "../img/"

// Typography
$font-family-base = Helvetica, Arial, sans-serif

$base-font-size = 16px
$base-line-height = 24px
$base-text-color = #000

$font-size-h1 = 36px
$font-size-h2 = 32px
$font-size-h3 = 30px
$font-size-h4 = 28px
$font-size-h5 = 24px
$font-size-h6 = 20px

$header-weight = bold

// Vertical Rhythmn
$debug-vertical-rhythm = false
$debug-color-line = #000


// Media queries

// The EMs have it: Proportional Media Queries FTW!
// http://blog.cloudfour.com/the-ems-have-it-proportional-media-queries-ftw/
// 7 Habits of Highly Effective Media Queries
// http://bradfrost.com/blog/post/7-habits-of-highly-effective-media-queries/
$phone = 480px
$tablet = 768px
$desktop = 992px

// sign-of-the-horns
$sign-of-the-horns-color = #fff
$sign-of-the-horns-width = 200px
$sign-of-the-horns-top-finger = 60px
$stroke-size = 8px
$sign-of-the-horns-finger-width = ($sign-of-the-horns-width / 4) - ($stroke-size - 25%)
$sign-of-the-horns-finger-height = 120px
